{
    "manifest_version": 3,
    "name": "Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "options_page": "src/options/options.html",
    "background": {
        "service_worker": "background/background.js"
    },
    "permissions": ["storage", "scripting"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/ui.js"],
            "css": ["content/main.css"]
        }
    ]
}
